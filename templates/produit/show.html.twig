{% extends 'base.html.twig' %}

{# Back office. Page pour 1 produit. #}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>{{ produit.libelle }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prixht</th>
                <td>{{ produit.prixht }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
        </tbody>
    </table>

    <img src="http://placehold.it/200x200" alt="Couverture de {{ produit.libelle }}">
{% endblock %}
