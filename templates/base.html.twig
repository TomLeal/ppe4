<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Booktique{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        <link rel="stylesheet" type="text/css" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    </head>
    <style>
        nav{
            background-color: #99F1F5;
        }

        .nav-link:hover{

        }

        {% block style %}{% endblock %}
    </style>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a style="color: #000;" class="navbar-brand" href="{{ path('index') }}">Booktique</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            {# Navbar #}
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a style="color: #000;" class="nav-link" href="{{ path('index') }}">Accueil<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #000;" class="nav-link" href="{{ path('boutique') }}">Boutique</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a style="color: #000;" class="nav-link" href="{{ path('index_backoffice') }}">Administration</a>
                        </li>
                    {% endif %}
                    {% if not is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a style="color: #000;" class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #000;" class="nav-link" href="{{ path('inscription') }}">Inscription</a>
                    </li>
                    {% else %}
                        <li class="nav-item">
                            <a style="color: #000;" class="nav-link" href="{{ path('profli_index') }}">Mon profil</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #000;" class="nav-link" href="{{ path('panier') }}">Panier</a>
                        </li>
                        <li style="float: right; display: block;" class="nav-item">
                            <a style="color: #000;" class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <div class="container">
            <br>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
